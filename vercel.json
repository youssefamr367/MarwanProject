{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "handle": "filesystem" },
    { "src": "/api/root", "dest": "/api/root.js" },
    { "src": "/", "dest": "/api/root.js" },
    { "src": "/(.*)", "dest": "/api/root.js" }
  ]
}
